<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leaksoft.app.houseofdesign">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".account.ContainerLoginRegisterActivity" />
        <activity
            android:name=".shop.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".shop.TypeActivity" />
        <activity android:name=".shop.ShowAllActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <!-- <activity android:name=".Shop.ShoppingCartFragment" /> -->
        <activity android:name=".transaction.ConfirmationActivity" />
        <activity android:name=".account.AddressActivity" />
        <activity android:name=".account.AddAddressActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".multimedia.FullScreenImageViewerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".transaction.PaymentActivity" />
        <activity android:name=".shop.ShoppingCartActivity" />
        <activity android:name=".orders.DetailTagihanActivity" />
        <activity android:name=".orders.DetailPembelianActivity" />
        <activity
            android:name=".shop.SearchingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".wallet.TopUpWalletActivity" />
        <activity android:name=".wallet.HistoryWalletActivity" />
        <activity android:name=".wallet.RedeemWalletActivity" />
        <activity android:name=".account.EditProfileActivity"/>
    </application>

</manifest>