<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorInactive"
    tools:context="com.leaksoft.app.houseofdesign.shop.ShowAllActivity">
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/show_all_loading"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_centerInParent="true"
        app:indicatorColor="@android:color/darker_gray"
        app:indicatorName="BallPulseIndicator"/>
    <TextView
        android:id="@+id/show_all_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="Tidak ada data transaksi yang tersedia"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/show_all_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/show_all_recyclerview"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
