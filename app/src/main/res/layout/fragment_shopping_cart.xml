<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.lukaskris.houseofdesign.Shop.ShoppingCartFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:id="@+id/shopping_cart_detail">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorInactive"/>
        <TextView
            android:id="@+id/shopping_cart_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPink"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:text="Rp 150.333"/>
        <Button
            android:id="@+id/shopping_cart_confirm"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:theme="@style/ConfirmButton"
            android:text="Confirm"
            android:textColor="#FFF" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/shopping_cart_detail">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shopping_cart_recyclerview"/>
        <LinearLayout
            android:id="@+id/shopping_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:id="@+id/address_home_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:tint="@android:color/darker_gray"
                android:src="@drawable/ic_shopping_cart_white_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No item in cart."/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
