<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tagihan_image"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.15"
                android:src="@drawable/empty_image"/>
            <TextView
                android:id="@+id/orders_item_row_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:padding="10dp"
                android:lines="2"
                android:ellipsize="end"
                android:text="Samsung Galaxy A5 2017 Bonus Micro sd dan casing 3 biji"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/orders_item_row_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="Rp4.502.337"/>
                <TextView
                    android:id="@+id/orders_item_row_status_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@id/orders_item_row_price"
                    android:text=""/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/orders_item_row_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@color/colorLightOrange">
            <TextView
                android:id="@+id/orders_item_row_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENUNGGU PEMBAYARAN"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/orders_item_row_batas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="batas pembayaran 08:44 WIB hari Kamis, 24 Agustus 2017"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>